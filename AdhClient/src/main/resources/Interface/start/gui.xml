<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://niftygui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <resourceBundle id="itf" filename="Interface/language" />
    <useStyles filename="nifty-default-styles.xml"/>
    <useControls filename="nifty-default-controls.xml"/>
    <useControls filename="Interface/adh-controls/adh-chat-control.xml"/>
    <useStyles filename="Interface/adh-controls/adh-chat-styles.xml"/>
    <screen id="gui" controller="fr.adh.client.gui.GuiScreenController">
        <!--<layer id="background" backgroundColor="#000F" />-->
        <!--layer id="layer" childLayout="center">
            <text font="aurulent-sans-16.fnt" color="#ffff" text="${itf.hello}" wrap="true" />
        </layer-->            
        <layer id="window" childLayout="absolute">
            <control id="chat-box" name="window" title="${itf.chat.title}" width="460px" height="240px" y="60%" closeable="false">
                <control id="chat-tabs" name="tabGroup" visible="true" height="100%" width="100%">
                    <control id="chat-tab-main" name="tab" caption="${itf.chat.tab.main.title}">
                        <control id="chatMainId" name="adh-chat" width="100%" height="100%" lines="5" />
                    </control>
                    <control id="chat-tab-system" name="tab" caption="${itf.chat.tab.system.title}">
                        <control id="chatSystemId" name="listBox" width="100%" height="100%" displayItems="7" vertical="optional" horizontal="off" selection="Disabled" />
                    </control>
                </control>
            </control>
        </layer>
                
    </screen>
</nifty>
