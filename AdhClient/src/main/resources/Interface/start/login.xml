<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://niftygui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <resourceBundle id="itf" filename="Interface/language" />
    <useStyles filename="nifty-default-styles.xml"/>
    <useControls filename="nifty-default-controls.xml"/>

	<screen id="login" controller="fr.adh.client.gui.LoginScreenController">
        <layer id="background" backgroundColor="#000F" />
        <layer childLayout="center">
      		<panel id="dialog" style="nifty-panel" childLayout="vertical" padding="18px,28px,28px,16px" width="350px" align="center" valign="center">
	      		<panel align="center" valign="center" childLayout="horizontal" width="100%" padding="5px">
	        		<control name="label" text="${itf.login.label} :" width="120px" align="left" valign="center" textHAlign="left" />
	        		<control id="loginInput" name="textfield" maxLength="30" filter="letters" />
	          	</panel>
	          	<panel align="center" valign="center" childLayout="horizontal" width="100%" padding="5px">
	        		<control name="label" text="${itf.password.label} :" width="120px" align="left" valign="center" textHAlign="left" />
	        		<control id="passwordInput" name="textfield" passwordChar="*" />
	        	</panel>
	        	<panel childLayout="vertical" width="100%" padding="5px">
	        		<control id="loginButton" name="button" label="Login" align="center" valign="center" />
	        	</panel>
        	</panel>
    	</layer>            
    </screen>
</nifty>